<ul>
    {{#each tracksSearch}}
        <li>
            <h4>{{this.name}}</h4>
            <br>
            {{#if this.preview_url}}
                <audio controls>
                    <source src="{{this.preview_url}}" type="audio/mpeg">
                    Your browser does not support the audio tag.
                </audio>
            {{else}}
                <p><b>D'oh! No preview available for you!</b></p>
            {{/if}}
        </li>
    {{/each}}
</ul>