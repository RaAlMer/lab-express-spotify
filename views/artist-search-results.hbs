<link rel="stylesheet" href="../styles/artistStyle.css">
<div class="content">
    {{#each artistSearch}}
        <div class="result">
            {{#if this.images}}
                <img src={{this.images.0.url}} alt="{{this.name}}" style="width: 200px">
            {{else}}
                <img src="https://cdn-icons-png.flaticon.com/512/147/147144.png" alt="Avatar" style="width: 200px">
            {{/if}}
            <div class="foot-card">
                <h2>{{this.name}}</h2>
                <a href={{concat '/albums/' this.id}}>View Albums</a>
            </div>  
        </div>
    {{else}}
        <span>There are no artists to show</span>
    {{/each}}
</div>